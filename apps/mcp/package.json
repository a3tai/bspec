{
  "name": "@bspec/mcp-server",
  "version": "1.1.2",
  "description": "Model Context Protocol server for BSpec 1.0 specification",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev",
    "deploy": "bun run build && wrangler deploy",
    "deploy:dev": "bun run build && wrangler deploy --env development",
    "deploy:prod": "bun run build && wrangler deploy --env production",
    "preview": "bun run build && wrangler dev",
    "logs": "wrangler tail",
    "logs:dev": "wrangler tail --env development",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check",
    "clean": "rm -rf dist",
    "test": "echo \"BSpec MCP Server - Tests not implemented yet\" && exit 0",
    "docs:build": "bun run build && node dist/docs/build.js --verbose",
    "docs:deploy": "node dist/docs/deploy.js --verbose",
    "docs:build-deploy": "bun run docs:build && bun run docs:deploy",
    "docs:dev": "bun run docs:build --output ./dev-docs && bunx serve ./dev-docs",
    "docs:clean": "rm -rf dist/docs dev-docs",
    "docs:cli": "node dist/docs/cli.js",
    "docs:test": "bun run build && node dist/docs/test.js"
  },
  "keywords": [
    "bspec",
    "mcp",
    "model-context-protocol",
    "business-specification",
    "cloudflare-workers"
  ],
  "author": "BSpec Foundation",
  "license": "CC BY 4.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "agents": "^0.4.0",
    "ai": "^6.0.6",
    "yaml": "^2.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250927.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "wrangler": "^4.40.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a3tai/bspec.git",
    "directory": "apps/mcp"
  },
  "homepage": "https://bspec.dev",
  "bugs": {
    "url": "https://github.com/a3tai/bspec/issues"
  },
  "overrides": {
    "@modelcontextprotocol/sdk": "1.23.0"
  }
}
